---
import HeroFocusedHeader from '../Headers/HeroFocusedHeader.astro';

export interface Props {
  title: string;
  description?: string;
  githubUrl?: string;
  currentPage?: 'home' | 'docs' | string;
  content: string; // Markdown processed to HTML
  tableOfContents: Array<{ id: string; title: string; level: number; anchor: string }>;
  readingTime?: number;
  lastUpdated?: string;
  hasLogo?: boolean;
  logoUrl?: string;
  homeUrl?: string;
  docsUrl?: string;
}

const { 
  title, 
  description, 
  githubUrl = '#', 
  currentPage = 'docs',
  content,
  tableOfContents,
  readingTime = 5,
  lastUpdated = new Date().toLocaleDateString(),
  hasLogo = false,
  logoUrl = '',
  homeUrl = '../',
  docsUrl = '../docs'
} = Astro.props;
---

<section class="hero-focused-docs-layout">
  <!-- „Éä„Éì„Ç≤„Éº„Ç∑„Éß„É≥ -->
  <HeroFocusedHeader title={title} currentPage={currentPage} githubUrl={githubUrl} hasLogo={hasLogo} logoUrl={logoUrl} homeUrl={homeUrl} docsUrl={docsUrl} />

  <!-- „Éâ„Ç≠„É•„É°„É≥„Éà„Ç≥„É≥„ÉÜ„É≥„ÉÑ -->
  <div class="docs-container">
    <!-- „Çµ„Ç§„Éâ„Éê„Éº„Éä„Éì„Ç≤„Éº„Ç∑„Éß„É≥ -->
    <aside class="docs-sidebar">
      <nav class="docs-navigation">
        <div class="docs-nav-header">
          <h3>üìñ Documentation</h3>
          <div class="reading-time">
            ‚è±Ô∏è {readingTime} min read
          </div>
        </div>
        
        <div class="table-of-contents">
          <h4>Table of Contents</h4>
          <div class="toc-items">
            {tableOfContents.map(item => (
              <a href={item.anchor} class={`toc-link level-${item.level}`}>
                {item.title}
              </a>
            ))}
          </div>
        </div>
      </nav>
    </aside>
    
    <!-- „É°„Ç§„É≥„Ç≥„É≥„ÉÜ„É≥„ÉÑ -->
    <main class="docs-content">
      <article class="documentation">
        <header class="docs-header-content">
          <h1>{title} Documentation</h1>
          <div class="docs-meta">
            <span class="repo-link">
              <a href={githubUrl} target="_blank" rel="noopener">
                üìÇ View on GitHub
              </a>
            </span>
            <span class="last-updated">
              Updated: {lastUpdated}
            </span>
          </div>
        </header>
        
        <div class="docs-body" set:html={content}>
        </div>
        
        <footer class="docs-footer">
          <div class="edit-link">
            <a href={`${githubUrl}/edit/main/README.md`} target="_blank" rel="noopener">
              ‚úèÔ∏è Improve this page on GitHub
            </a>
          </div>
        </footer>
      </article>
    </main>
  </div>
</section>

<style>
  .hero-focused-docs-layout {
    min-height: 100vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .docs-container {
    display: grid;
    grid-template-columns: 280px 1fr;
    min-height: calc(100vh - 80px);
    gap: 0;
  }

  .docs-sidebar {
    background: var(--color-surface);
    border-right: 1px solid var(--color-border);
    padding: 2rem 1.5rem;
    height: calc(100vh - 80px);
    overflow-y: auto;
    position: sticky;
    top: 80px;
  }

  .docs-nav-header h3 {
    margin-bottom: 0.5rem;
    color: var(--color-primary);
    font-size: 1.1rem;
  }

  .reading-time {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
  }

  .table-of-contents h4 {
    font-size: 0.9rem;
    margin-bottom: 1rem;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .toc-items {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .toc-link {
    display: block;
    padding: 0.5rem 0.75rem;
    color: var(--color-text-muted);
    text-decoration: none;
    border-radius: 6px;
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }

  .toc-link:hover {
    background: color-mix(in srgb, var(--color-primary) 10%, transparent);
    color: var(--color-primary);
  }

  .toc-link.level-2 {
    padding-left: 1.5rem;
    font-size: 0.85rem;
  }

  .toc-link.level-3 {
    padding-left: 2.25rem;
    font-size: 0.8rem;
  }

  .docs-content {
    padding: 2rem 3rem;
    max-width: none;
    overflow-x: auto;
  }

  .docs-header-content {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--color-border);
  }

  .docs-header-content h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .docs-meta {
    display: flex;
    gap: 1.5rem;
    align-items: center;
    font-size: 0.9rem;
  }

  .repo-link a {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
  }

  .last-updated {
    color: var(--color-text-muted);
  }

  .docs-body {
    line-height: 1.7;
    color: var(--color-text-secondary);
  }

  .docs-body h2 {
    margin: 2rem 0 1rem;
    color: var(--color-primary);
    font-size: 1.75rem;
    border-bottom: 2px solid var(--color-border);
    padding-bottom: 0.5rem;
  }

  .docs-body h3 {
    margin: 1.5rem 0 0.75rem;
    color: var(--color-text-primary);
    font-size: 1.25rem;
  }

  .docs-body h4 {
    margin: 1rem 0 0.5rem;
    color: var(--color-text-primary);
    font-size: 1.1rem;
  }

  .docs-body p {
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  .docs-body ul,
  .docs-body ol {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .docs-body li {
    margin: 0.5rem 0;
  }

  .docs-body code {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    padding: 0.125rem 0.25rem;
    font-family: var(--font-mono);
    font-size: 0.875em;
  }

  .docs-body pre {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1rem;
    margin: 1rem 0;
    overflow-x: auto;
    font-family: var(--font-mono);
  }

  .docs-body pre code {
    background: none;
    border: none;
    padding: 0;
  }

  .docs-body blockquote {
    border-left: 4px solid var(--color-primary);
    margin: 1rem 0;
    padding-left: 1rem;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .docs-body img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1rem 0;
  }

  .docs-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .edit-link a {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--color-primary);
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .edit-link a:hover {
    background: var(--color-primary);
    color: white;
  }

  @media (max-width: 1024px) {
    .docs-container {
      grid-template-columns: 1fr;
    }
    
    .docs-sidebar {
      position: relative;
      height: auto;
      border-right: none;
      border-bottom: 1px solid var(--color-border);
    }
    
    .docs-content {
      padding: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .docs-content {
      padding: 1rem;
    }
    
    .docs-header-content h1 {
      font-size: 2rem;
    }
  }
</style>