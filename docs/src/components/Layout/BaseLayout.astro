---
export interface Props {
  title: string;
  description?: string;
  repoData?: any;
  layoutType?: string;
  customTokens?: any;
}

const { title, description = '', repoData, layoutType = 'default', customTokens = {} } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="icon" href="/favicon.ico">
  
  <!-- Custom CSS Variables -->
  <style define:vars={customTokens}></style>
</head>
<body>
  <main>
    <slot />
  </main>
  
  <!-- Footer -->
  <footer class="site-footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-info">
          <h3>{repoData?.title || title}</h3>
          <p>{repoData?.description || description}</p>
        </div>
        
        <div class="footer-links">
          {repoData?.repoUrl && (
            <a href={repoData.repoUrl} target="_blank" rel="noopener">
              ðŸ“‚ View on GitHub
            </a>
          )}
        </div>
      </div>
      
      <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} Generated with GitLyte</p>
      </div>
    </div>
  </footer>
</body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, sans-serif;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .site-footer {
    background: #1a1a1a;
    color: white;
    padding: 2rem 0 1rem;
    margin-top: auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 2rem;
    margin-bottom: 1rem;
    align-items: start;
  }

  .footer-info h3 {
    margin-bottom: 0.5rem;
    color: #60a5fa;
  }

  .footer-info p {
    opacity: 0.8;
    line-height: 1.5;
  }

  .footer-links a {
    color: #60a5fa;
    text-decoration: none;
    font-weight: 500;
  }

  .footer-links a:hover {
    text-decoration: underline;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 1rem;
    text-align: center;
    opacity: 0.7;
    font-size: 0.9rem;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>