  }

  .feature-icon {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #1a1a1a;
  }

  .feature-title {
    font-size: 1.125rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
    color: #1a1a1a;
  }

  .feature-description {
    font-size: 0.875rem;
