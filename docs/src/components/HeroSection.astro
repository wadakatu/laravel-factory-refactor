---
// Astroのフロントマッターで型定義とPropsを設定
interface Props {
  projectOverview: string;
  keyConcepts: string[];
}

const { projectOverview, keyConcepts } = Astro.props as Props;
---

<section class="hero">
  <div class="hero-content">
    <h1>{projectOverview}</h1>
    <ul>
      {keyConcepts.map((concept) => (
        <li>{concept}</li>
      ))}
    </ul>
  </div>
</section>

<style>
  :root {
    --color-primary: #0A74DA;
    --color-secondary: #F5B700;
    --color-accent: #0F4C81;
    --color-background: #FFFFFF;
    --color-surface: #F8F9FA;
    --color-text-primary: #333333;
    --color-text-secondary: #555555;
    --font-heading: 'Roboto', sans-serif;
    --font-body: 'Open Sans', sans-serif;
    --font-code: 'Fira Code', monospace;
  }

  .hero {
    background-color: var(--color-surface);
    padding: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .hero-content {
    max-width: 800px;
    border: 1px solid var(--color-secondary);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    padding: 2rem;
    background-color: var(--color-background);
  }

  h1 {
    font-family: var(--font-heading);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: 1rem;
    font-size: 2rem; /* Moderate scale */
  }

  ul {
    list-style-type: none;
    padding: 0;
  }

  li {
    font-family: var(--font-body);
    font-size: 16px;
    line-height: 1.5;
    color: var(--color-text-secondary);
    margin-bottom: 0.5rem;
  }

  /* モバイルファーストのレスポンシブデザイン */
  @media (min-width: 768px) {
    .hero {
      padding: 4rem;
    }

    h1 {
      font-size: 2.5rem; /* Larger scale for bigger screens */
    }
  }
</style>
