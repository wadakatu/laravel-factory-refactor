---
import HeroFocusedLayout from '@gitlyte/shared/components/Layout/HeroFocusedLayout.astro';

interface Props {
  title: string;
  description?: string;
  stats: {
    stars: number;
    forks: number;
    issues: number;
  };
  hasReadme?: boolean;
  repoUrl?: string;
  hasLogo?: boolean;
  logoUrl?: string;
}

const { title, description, stats, hasReadme, repoUrl, hasLogo, logoUrl } = Astro.props as Props;

// Create repo data for the shared layout
const repoData = {
  title,
  description,
  stats,
  hasReadme,
  repoUrl,
  hasLogo,
  logoUrl
};
---

<HeroFocusedLayout 
  title={title} 
  description={description || "AI-generated project site"} 
  stats={stats}
  repoData={repoData}
/>