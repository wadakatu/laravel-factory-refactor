---
export interface Props {
  title: string;
  description?: string;
  stats: {
    stars: number;
    forks: number;
    issues: number;
  };
  hasReadme?: boolean;
  repoUrl?: string;
  hasLogo?: boolean;
  logoUrl?: string;
}

const { title, description, stats, hasReadme, repoUrl, hasLogo, logoUrl } = Astro.props;
---

<!-- üéØ MINIMAL LAYOUT - Clean and Simple Design -->
<header class="minimal-header">
  <div class="container">
    <h1 class="project-title">{title}</h1>
    {description && <p class="project-description">{description}</p>}
    
    <div class="project-meta">
      <span class="meta-item">‚≠ê {stats.stars}</span>
      <span class="meta-item">üç¥ {stats.forks}</span>
      <span class="meta-item">üìã {stats.issues} issues</span>
    </div>
    
    <div class="action-links">
      {hasReadme && <a href="./docs" class="link">üìñ Documentation</a>}
      <a href={repoUrl} class="link" target="_blank" rel="noopener">üîó View Source</a>
    </div>
  </div>
</header>

<style>
  .minimal-header {
    background: #ffffff;
    border-bottom: 1px solid #e1e5e9;
    padding: 3rem 0;
    text-align: center;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .project-title {
    font-size: 2.5rem;
    font-weight: 600;
    color: #4A90E2;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .project-description {
    font-size: 1.1rem;
    color: #586069;
    margin-bottom: 2rem;
    line-height: 1.5;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .project-meta {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .meta-item {
    font-size: 0.9rem;
    color: #6a737d;
    background: #f6f8fa;
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    border: 1px solid #e1e5e9;
  }

  .action-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .link {
    text-decoration: none;
    color: #4A90E2;
    font-weight: 500;
    padding: 0.6rem 1.2rem;
    border: 1px solid #4A90E2;
    border-radius: 6px;
    transition: all 0.2s ease;
    background: transparent;
  }

  .link:hover {
    background: #4A90E2;
    color: white;
    transform: translateY(-1px);
  }

  @media (max-width: 768px) {
    .minimal-header {
      padding: 2rem 0;
    }
    
    .project-title {
      font-size: 2rem;
    }
    
    .project-meta {
      gap: 1rem;
    }
    
    .action-links {
      flex-direction: column;
      align-items: center;
    }
    
    .link {
      width: 100%;
      max-width: 200px;
      text-align: center;
    }
  }
</style>