---
import BaseLayout from '../components/Layout/BaseLayout.astro';
import HeroFocusedDocs from '../components/Docs/HeroFocusedDocs.astro';

const repoData = {
  title: "laravel-factory-refactor",
  description: "Refactor the style of factory call from helper to static in Laravel 8.x, 9.x, 10.x.",
  stats: {
    stars: 1,
    forks: 0,
    issues: 10
  },
  repoUrl: "https://github.com/wadakatu/laravel-factory-refactor",
};
---

<BaseLayout 
  title={`${repoData.title} - Documentation`}
  description="Documentation and guides"
  repoData={repoData}
  layoutType="hero-focused"
>
  <HeroFocusedDocs 
    title={repoData.title}
    description={repoData.description}
    githubUrl={repoData.repoUrl}
    content="<h2>Getting Started</h2><p>Welcome to the documentation for this project.</p><h2>Installation</h2><p>Follow these steps to get started...</p>"
    tableOfContents={[
      { id: "getting-started", title: "Getting Started", level: 2, anchor: "#getting-started" },
      { id: "installation", title: "Installation", level: 2, anchor: "#installation" }
    ]}
    readingTime={3}
    currentPage="docs"
  />
</BaseLayout>